
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="jumbotron">
    <h1>Editing Page </h1>
    <br />
    <p class="lead">You can edit (add,delete,update) authors and news they write .</p>

</div>

<div class="row">
    <div class="col-md-4">
        <h2>Edit Authors</h2>
        <p>
            click here to go to author editing page
        </p>
        @Html.ActionLink("Edit Authors >>", "showauthors", "Authors", null, new { @class = "btn btn-primary" })
        </div>
    <div class="col-md-4">
        <h2>Edit News</h2>
        <p>
            click here to go to news editing page
        </p>
        @Html.ActionLink("Edit News >>", "shownews", "News", null, new { @class = "btn btn-primary" })
    </div>
</div>