@model IEnumerable<NewsAuthorTask.Models.Authornews>

@{
    ViewBag.Title = "shownews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>News</h2>

<p>
    @Html.ActionLink("Create New", "AddNews","News")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.author.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.news.newstitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.news.newscontent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.news.newsimg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.news.publicationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.news.creationDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       <td>
            @Html.DisplayFor(modelItem => item.author.Name)
       </td>
        <td>
            @Html.DisplayFor(modelItem => item.news.newstitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.news.newscontent)
        </td>
        <td>
            <img src="@Url.Content(item.news.newsimg)" style="width:200px; height:inherit;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.news.publicationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.news.creationDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "editnews", "News", new { id = item.news.id },null) |
  
            @Html.ActionLink("Delete", "deletenews", "News", new { id = item.news.id }, new { onclick = "return confirm('Are you sure you wish to delete this ?');" })
        </td>
    </tr>
}
  
</table>
